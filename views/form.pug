extends layout

block content

    h1 Add User
    form(action="/users/add", method="post")
        label(for="name") Name:
        input( type='text' name='name' )
        |
        |
        label(for="username") Username:
        input( type='text' name='username' )
        |
        |
        label(for="email") Email:
        input( type='email' name='email' )
        |
        |
        button(type="submit") Add User

